{
  "manifest_version": 3,
  "name": "AI Helper",
  "version": "1.0",
  "description": "Ask ChatGPT questions about selected text on a webpage.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E"
      },
      "description": "Open the AI Helper popup"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}